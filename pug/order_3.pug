extends blocks/base.pug

block title 
	title Оформление заказа (шаг 3)

block content

	.page

		include blocks/header-nomenu.pug
		
		.content
			
			// order
			.order
				.container
					a(href="#").order__back Вернуться назад
					.row 
						.col-md-6 
							form(action="#") 
								.order__title.order__title--mb32 Оформление заказа

								.d-flex.justify-content-between.flex-wrap.flex-xl-nowrap


									.order__pays 
										.order__subtitle Выберите способ оплаты
										.order__pay
											input#visa(type="radio" name="pay")
											label(for="visa") 
												img(src="img/visa.svg", alt="")
												span Visa
												span.order__pay-radio
										.order__pay
											input#mastercard(type="radio" name="pay")
											label(for="mastercard") 
												img(src="img/mastercard.svg", alt="")
												span Mastercard
												span.order__pay-radio
										.order__pay
											input#mir(type="radio" name="pay")
											label(for="mir") 
												img(src="img/mir.svg", alt="")
												span Мир
												span.order__pay-radio

									.order__inputs
										.order__subtitle.order__purple Ввести промокод:
										.input 
											.input__input 
												input(type="text") 
										.order__inputs-btn
											.btn.btn--small.btn--black ПРИМЕНИТЬ

								.row.gy-3.align-items-end
									.col-md-6
										.order__progress 
											.order__progress-step 3/3
											.order__progress-line 
												span(style="width: 100%")
									.col-md-6 
										.order__buttons 
											a(href="#").btn.btn--small.btn--white НАЗАД
						.col-xl-4.col-md-5.offset-md-1.offset-xl-2.d-md-block.d-none
							.order__head 
								.order__title Итого:
								ul.order__list
									li 1 товар
										span 3590 ₽
							.order__imageblock 
								.order__img 
									img(src="img/product.webp", alt="")
								| Букет из пионов
							.order__title Итого с учетом скидок:
							ul.order__list 
								li 1 товар
									span 3590 ₽
								li Доставка
									span.order__purple бесплатно
								li К оплате
									span К оплате
			//	/order
			
		include blocks/footer.pug