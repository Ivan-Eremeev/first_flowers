extends blocks/base.pug

block title 
	title Оформление заказа (шаг 2)

block content

	.page

		include blocks/header-nomenu.pug
		
		.content
			
			// order
			.order
				.container
					a(href="#").order__back Вернуться назад
					.row 
						.col-md-6 
							form(action="#") 
								.order__title.order__title--mb32 Оформление заказа
								.order__subtitle Уточните детали доставки
								.order__tabs
									.row.gy-2
										.col-lg-6
											.input 
												.input__label Имя 
													span &#42;
												.input__input 
													input(type="text") 
										.col-lg-6.order-lg-0.order-1
											.input
												.input__label Дата доставки
													span &#42;
												.input__input 
													input(type="text" autocomplete="off")#airDatepicker 
													label(for="airDatepicker").input__calendar 
														img(src="img/calendar.svg", alt="")
										.col-lg-6
											.input
												.input__label Дополнительная информация: 
												.input__input 
													textarea(type="text") 
										.col-lg-6.order-lg-0.order-2
											.select 
												.select__label Время доставки
													span &#42;
												.select__select 
													select(name="#") 
														option(value="#") в ближайшее время
														option(value="#") 12:00-13:00
														option(value="#") 13:00-14:00
														option(value="#") 14:00-15:00
														option(value="#") 15:00-16:00
														option(value="#") 16:00-17:00
														option(value="#") 17:00-18:00
														option(value="#") 18:00-19:00
														option(value="#") 19:00-20:00
								.row.gy-3.align-items-end
									.col-md-6
										.order__progress 
											.order__progress-step 2/3
											.order__progress-line 
												span(style="width: 66.66%")
									.col-md-6 
										.order__buttons 
											a(href="#").btn.btn--small.btn--white НАЗАД
											a(href="#").btn.btn--small.btn--purple ДАЛЕЕ
						.col-xl-4.col-md-5.offset-md-1.offset-xl-2.d-md-block.d-none
							.order__head 
								.order__title Итого:
								ul.order__list
									li 1 товар
										span 3590 ₽
							.order__imageblock 
								.order__img 
									img(src="img/product.webp", alt="")
								| Букет из пионов
							.order__title Итого с учетом скидок:
							ul.order__list 
								li 1 товар
									span 3590 ₽
								li Доставка
									span.order__purple бесплатно
								li К оплате
									span К оплате
			//	/order
			
		include blocks/footer.pug